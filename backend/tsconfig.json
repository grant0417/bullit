{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "src",
    "esModuleInterop": true,
    "incremental": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true
  },
  "include": ["src/**/*", "types/**/*"],
  
}
